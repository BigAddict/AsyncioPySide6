[flake8]
max-line-length = 127
max-complexity = 15
exclude = .git,__pycache__,.venv,venv,build,dist,*.egg-info,.pytest_cache,.mypy_cache,.tox
ignore = E203,E501,W503,W504,F401,F403,F405,E402,E712,F841,F824
per-file-ignores = 
    __init__.py:F401
    tests/*:E402,F841

[tool.bandit]
exclude_dirs = ["tests", "examples"]
skips = ["B101", "B601"] 